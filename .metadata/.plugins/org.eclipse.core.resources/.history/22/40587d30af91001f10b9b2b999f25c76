package com.hub.repository;

import com.hub.domain.PersonStat;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.time.LocalDate;
import java.util.List;
import java.util.Optional;

@Repository
public interface PersonStatRepository extends JpaRepository<PersonStat, Long> {
    
    // 특정 날짜에 대한 통계 데이터 조회
    Optional<PersonStat> findByPsDt(LocalDate psDt);

    // 모든 통계 데이터 조회 (정렬 옵션 추가 가능)
    List<PersonStat> findAllByOrderByPsDtAsc();
}
